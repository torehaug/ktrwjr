<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:k="urn:import:bufferings.ktr.wjr.client.ui">

  <ui:with
    field="res"
    type="bufferings.ktr.wjr.client.resource.Resources" />

  <g:HorizontalPanel
    spacing="1"
    width="100%"
    height="100%">

    <g:cell
      horizontalAlignment="ALIGN_CENTER"
      verticalAlignment="ALIGN_MIDDLE">
      <g:HorizontalPanel
        spacing="1">
        <g:Image
          resource="{res.ktrwjrLoading}"
          altText="Kotori Web JUnit Runner" />
      </g:HorizontalPanel>
    </g:cell>

  </g:HorizontalPanel>
</ui:UiBinder> 